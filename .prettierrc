{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": false,
  "printWidth": 88,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    },
    {
      "files": "*.{yaml,yml}",
      "options": {
        "printWidth": 120
      }
    }
  ]
}
