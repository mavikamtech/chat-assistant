# Mavik AI - Environment Configuration Example
# Copy this file to .env.local and fill in your values

# Application Environment
APP_ENV=local
AWS_REGION=us-east-1

# Mock mode for local development (set to false for real AWS)
MOCK_AWS=true

# Logging
LOG_LEVEL=DEBUG

# Cognito (leave empty for mock mode)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# Bedrock Models
BEDROCK_MODEL_ID_CLAUDE_SONNET=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDINGS_MODEL_ID_TITAN_V2=amazon.titan-embed-text-v2:0

# OpenSearch (leave empty for mock mode)
OPENSEARCH_COLLECTION_NAME=mavik-ai-rag
OPENSEARCH_INDEX_NAME=documents

# Aurora Database (leave empty for mock mode)
AURORA_SECRET_ARN=
AURORA_PROXY_ENDPOINT=

# S3 Buckets (leave empty for mock mode)
S3_BUCKET_RAW=mavik-ai-raw-dev
S3_BUCKET_CURATED=mavik-ai-curated-dev
S3_BUCKET_REPORTS=mavik-ai-reports-dev

# Guardrails (leave empty for mock mode)
GUARDRAILS_ID=
OUTBOUND_ALLOWLIST_GROUP=mavik-ai-web-research

# DynamoDB (leave empty for mock mode)
DDB_AUDIT_TABLE=mavik-ai-audit-dev

# Redis (leave empty for mock mode)
REDIS_ENDPOINT=

# Service URLs (for local development)
ORCHESTRATOR_URL=http://localhost:8080
MCP_RAG_URL=ws://localhost:8081
MCP_PARSER_URL=ws://localhost:8082
MCP_FINDB_URL=ws://localhost:8083
MCP_WEB_URL=ws://localhost:8084
MCP_CALC_URL=ws://localhost:8085

# Local file paths for mock mode
LOCAL_DATA_DIR=./tmp/data
LOCAL_REPORTS_DIR=./tmp/reports
