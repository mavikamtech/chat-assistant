# Mavik AI - Environment Configuration Example
# Copy this file to .env.local and fill in your values

# ===== Application =====
APP_ENV=dev
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
LOG_LEVEL=INFO

# ===== Authentication =====
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_AUDIENCE=api://mavik-ai
AZURE_AD_ISSUER=https://login.microsoftonline.com/{tenant-id}/v2.0

# ===== AWS Bedrock =====
BEDROCK_MODEL_ID_HAIKU=anthropic.claude-3-5-haiku-20241022-v1:0
BEDROCK_MODEL_ID_SONNET=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDINGS_MODEL_ID_TITAN_V2=amazon.titan-embed-text-v2:0
GUARDRAILS_ID=your-guardrails-id

# ===== Data Storage =====
# OpenSearch
OPENSEARCH_COLLECTION_NAME=mavik-vectors
OPENSEARCH_INDEX_NAME=documents
OPENSEARCH_ENDPOINT=https://your-collection.us-east-1.aoss.amazonaws.com

# Aurora PostgreSQL
AURORA_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:mavik-aurora-creds
AURORA_PROXY_ENDPOINT=mavik-proxy.proxy-abcdef123456.us-east-1.rds.amazonaws.com
AURORA_DATABASE_NAME=mavik

# S3 Buckets
S3_BUCKET_RAW=mavik-om-raw-dev
S3_BUCKET_CURATED=mavik-curated-dev
S3_BUCKET_REPORTS=mavik-reports-dev

# DynamoDB Tables
DDB_AUDIT_TABLE=mavik-audit-dev
DDB_CHECKPOINT_TABLE=mavik-checkpoints-dev
DDB_AGENT_REGISTRY=mavik-agents-dev
DDB_CACHE_TABLE=mavik-cache-dev

# ===== MCP Servers (Internal Service Discovery) =====
MCP_RAG_URL=wss://rag.svc.mavik.internal:443
MCP_PARSER_URL=wss://parser.svc.mavik.internal:443
MCP_FINDB_URL=wss://findb.svc.mavik.internal:443
MCP_WEB_URL=wss://web.svc.mavik.internal:443
MCP_CALC_URL=wss://calc.svc.mavik.internal:443
MCP_REPORT_URL=wss://report.svc.mavik.internal:443

# ===== Tool Timeouts (milliseconds) - CRITICAL =====
TIMEOUT_RAG=800
TIMEOUT_FINDB=200
TIMEOUT_WEB=1500
TIMEOUT_CALC=150
TIMEOUT_PARSER=30000
TIMEOUT_REPORT=1500

# ===== Local Development =====
MOCK_AWS=true
LOCAL_DEV_MODE=true
LOCAL_DATA_DIR=./tmp/data
LOCAL_REPORTS_DIR=./tmp/reports

# Service URLs (for local development)
ORCHESTRATOR_URL=http://localhost:8080
MCP_RAG_URL_LOCAL=ws://localhost:8081
MCP_PARSER_URL_LOCAL=ws://localhost:8082
MCP_FINDB_URL_LOCAL=ws://localhost:8083
MCP_WEB_URL_LOCAL=ws://localhost:8084
MCP_CALC_URL_LOCAL=ws://localhost:8085

# ===== Security =====
KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/your-key-id
SECRETS_MANAGER_PREFIX=/mavik-ai/dev/

# ===== Rate Limiting & Budgets =====
DEFAULT_RATE_LIMIT_PER_MINUTE=100
MAX_TOKENS_PER_REQUEST=8000
MAX_COST_USD_PER_REQUEST=0.25
DAILY_BUDGET_USD=500.00
